{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'storm'",
			"cargo": {
				"args": [
					"build",
					"--bin=storm",
					"--package=storm"
				],
				"filter": {
					"name": "storm",
					"kind": "bin"
				}
			},
			"args": [
				"--backend=llvm",
				"--in-path=data/b.storm",
				"--out-path=out/test.out"
			],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'storm'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=storm",
					"--package=storm"
				],
				"filter": {
					"name": "storm",
					"kind": "bin"
				}
			},
			"args": [
				"--backend=llvm",
				"--in-path=data/b.storm",
				"--out-path=out/test.out"
			],
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "(Windows) Launch",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceRoot}/target/debug/storm.exe",
			"args": [
				"--backend=llvm",
				"--in-path=data/b.storm",
				"--out-path=out/test.out"
			],
			"cwd": "${workspaceFolder}",
		}
	]
}
